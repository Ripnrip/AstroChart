  "type": "module",
  "keywords": [
    "astrology",
    "chart",
    "horoscope",
    "zodiac",
    "ephemetis"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AstroDraw/AstroChart.git"
  },
  "main": "./dist/astrochart.js",
  "types": "./dist/project/src/index.d.ts",
  "exports": {
    ".": {
