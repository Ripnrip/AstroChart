    "jest": "^27.5.1",
    "terser-webpack-plugin": "^5.3.1",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.8",
    "typescript": "^4.9.5",
    "vite": "^6.1.0",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
